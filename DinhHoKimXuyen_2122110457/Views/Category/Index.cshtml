@model IEnumerable<DinhHoKimXuyen_2122110457.Models.category>

@{
    ViewBag.Title = "Index";
}
 

<section class="section-content padding-y">
    <div class="container">
        <nav class="row">
            @foreach (var category in Model)
            {
                <div class="col-md-3">
                    <div class="card card-category">
                        <div class="img-wrap" style="background: #ffd7d7">
                            <img src="@Url.Content("~/images/items/" + category.image)" alt="@category.name">
                        </div>
                        <div class="card-body">
                            <h4 class="card-title">
                                <a href="@Url.Action("ListProductByCategory", "Category", new { id = category.id })">
                                    @category.name
                                </a>
                            </h4>
                            <ul class="list-menu">
                                <li><a href="#">@category.description</a></li>
                                <!-- Add more items here if needed -->
                            </ul>
                        </div>
                    </div>
                </div> <!-- col.// -->
            }
        </nav> <!-- row.// -->
    </div> <!-- container .//  -->
</section>
<!-- ========================= SECTION CONTENT END// ========================= -->
